page{
  padding-top: 100rpx;
}
.login{
  text-align: center;
  padding:0 40rpx;
}
.login>image{
  width:200rpx;
  height: 200rpx;
}
button{
  background: #F4BF54;
  color:#fff;
  font-size: 28rpx;
  border-radius: 30rpx;
  margin-top:120rpx;
  padding:9rpx 0;
}
button:after{
  border:none;
}
.login .title{
  width:70%;
  font-size: 28rpx;
  color:#000;
  line-height: 3;
  font-family: "微软雅黑";
  font-weight: 700;
  margin:0 auto 40rpx;
  border-bottom: 1rpx solid #F1F1F1;
}
.login .trips{
  width:70%;
  font-size: 28rpx;
  text-align: left;
  margin:0 auto;
  line-height: 1.7;
  color: #000;
}
.login .infos{
  width:70%;
  text-align: left;
  font-size: 28rpx;
  margin:0 auto;
  line-height: 1.7;
  color:#959595;
}