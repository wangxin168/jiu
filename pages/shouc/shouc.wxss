/* pages/shouc/shouc.wxss */
.da{
  min-height: 100%;
  /* background-color: #F8F8F8;  */
}
.da .ul{
  width: 100%;
  background: white;
  /* border-top: 1px solid #EFEFEF; */
}
.chaner{
  width: 96%;
  /* height: 234rpx; */
  margin-left: 4%;
  border-bottom: 1px solid #EFEFEF;
  display: flex;
  padding: 20rpx 17rpx 24rpx 0;
  box-sizing: border-box;
}
.chaner .tu{
  width: 220rpx;
  height: 220rpx;
}
.chaner .wen{
  width: 65%;
  margin-left: 2%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.chaner .wen .goods_name{
  width: 100%;
  font-size: 30rpx;
  color: #040404;
  letter-spacing: 1.17px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;

}
.chaner .wen .goods_point{
  font-size: 26rpx;
color: #9F9F9F;
letter-spacing: 0.46px;
margin-top: 7rpx;
}
.chaner .wen .goods_price{
  font-size: 36rpx;
color: #F21E00;
letter-spacing: 0.64px;
margin-top: 7rpx;
}
.chaner .wen .liang{
  font-size: 24rpx;
color: #9F9F9F;
letter-spacing: 0.43px;
margin-top: 9rpx;
}
.shang{
  width: 51%;
  margin: 50rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.shang .xiao{
  width: 84rpx;
  height: 1rpx;
  background: #D8D8D8;
  z-index: 10;
}
.shang .wen{
  font-size: 26rpx;
color: #8A8A8A;
letter-spacing: 0.46px;
}
