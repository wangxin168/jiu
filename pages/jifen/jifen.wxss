/* pages/jifen/jifen.wxss */

.da {
  width: 100%;
  position: relative;
  z-index: 10;
}
.da_er{
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}
.jifen {
  width: 100%;
  margin: auto;
  background: #f5f5f5;
  padding: 2% 4%;
  box-sizing: border-box;
}

.jifen image {
  width: 100%;
  height: 271rpx;
  position: relative;
}

.jifen  .ding {
  width: 100%;
  height: 271rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.jifen  .ding text:nth-of-type(1) {
  font-size: 70rpx;
  color: #575757;
  text-align: center;
  margin-top: 58rpx;
  display: block;
}

.jifen  .ding text:nth-of-type(2) {
  font-size: 28rpx;
  color: #818181;
  text-align: center;
  display: block;
}

.swiper-tab {
  width: 100%;
  border-bottom: 20rpx solid #f5f5f5;
  text-align: center;
  height: 96rpx;
  display: flex;
  justify-content: space-around;
  background: white;
}

.swiper-tab-list {
  display: inline-block;
  font-size: 30rpx;
  color: #414141;
  letter-spacing: 0.54px;
  height: 96rpx;
  line-height: 96rpx;
}

.on {
  border-bottom: 5rpx solid #f1b22f;
}

.swiper-box {
  display: block;
  width: 100%;
  overflow: hidden;
  position: absolute;
  left: 0;
  top: 423rpx;
  z-index: 1;
}

.shouyi {
  width: 96%;
  margin-left: 4%;
  height: 140rpx;
  padding: 26rpx 4% 25rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ececec;
}

.shouyi .shang {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.shouyi .shang text:nth-of-type(1) {
  font-size: 30rpx;
  color: #3b3b3b;
  letter-spacing: 1.62px;
}

.shouyi .shang text:nth-of-type(2) {
  font-size: 32rpx;
  color: #a1a1a1;
  letter-spacing: 0.57px;
}

.shouyi .xia {
  font-size: 26rpx;
  color: #a1a1a1;
  margin-top: 10rpx;
}
