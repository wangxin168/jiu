
page{
  width: 100%;
  height: 100%;
  background: #F8F8F8;
  
}

.da{
  width: 92%;
  margin: auto;
  /* height: 500rpx; */
  overflow: hidden;
}
.da .shijian{
  width: 145rpx;
  height: 37rpx;
  border-radius: 6px;
  margin: auto;
  font-size: 28rpx;
  color: #FFFFFF;
  background: #E8E8E8;
  margin-top: 28rpx;
  text-align: center;
}
.da .tuwen {
  background: white;
  padding: 0 0 30rpx 0;
  margin-top: 28rpx;
  border-radius: 13px;
}
.da .tuwen image{
  width: 100%;
  height: 282rpx;
  border-radius: 13px 13px 0 0;
}
.da .tuwen .wen{
  width: 92%;
  margin: auto;
}
.da .tuwen .wen text{
  display: block;
}
.da .tuwen .wen text:nth-of-type(1){
  font-size: 34rpx;
  color: #424242;
  margin-top: 28rpx;
}
.da .tuwen .wen text:nth-of-type(2){
  font-size: 28rpx;
  color: #A9A9A9;
  margin-top: 7rpx;
}