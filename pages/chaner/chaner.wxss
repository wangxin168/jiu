.menuBox{
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding: 25rpx 0;
  border-bottom: 1px solid #EFEFEF;
  position: fixed;
  top: 0;
  background: white;
  align-items: center;
  z-index: 1;
}
.menuBox view{
  font-size: 28rpx;
  color: #040404;
  letter-spacing: 0.5px;
  display: flex;
  align-items: center;
}
.menuBox .item .icon{
  width:20rpx;
  display: inline-block;
  transform: translateY(-27%);
}
.menuBox .item .icon>i{
  width:15rpx;
  height: 15rpx;
  display: block;
}
.menuBox .item i{
  font-size: 26rpx;
}
.chang{
  width: 100%;
  position: relative;
  margin-top: 88rpx;
  z-index: 0;
}
.liebie{
  width: 100%;
  height: 100%;
  position: absolute;
  background: rgba(0, 0, 0, 0.5);
  top: 0;
}
.liebie .bai{
  width: 100%;
  background: white;
  padding: 20rpx 40rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.liebie .bai view{
  width: 210rpx;
  height: 76rpx;
  text-align: center;
  line-height: 76rpx;
  font-size: 28rpx;
  margin-bottom:15rpx;
  margin-right:9rpx;
  background: #ECECEC;
  color: #656565;
  border: 1px solid #ECECEC;
}
.liebie .bai .chooes{
  background: #FFF7E5;
  border:1rpx solid #F1B331;
  color:#F1B230;
}
.upactive,.downactive,.pactive,.practives{
  color:#F1B230;
}
.chaner{
  width: 96%;
  margin-left: 4%;
  border-bottom: 0.5px solid #EFEFEF;
  display: flex;
  padding:30rpx 0;
}
.chaner .tu{
  width:220rpx;
  height: 220rpx;
  overflow: hidden;
}
.chaner .tu image{
  width: 100%;
}
.chaner .wen{
  width: 65%;
  margin-left: 2%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.chaner .wen .goods_name{
  width: 100%;
  font-size: 30rpx;
  color: #040404;
  letter-spacing: 1.17px;
  display: flex;
  align-items: center;
  line-height: 33rpx;
  padding: 0 2% 0 0;
  box-sizing: border-box;
}
.chaner .wen .goods_name .tu{
  width: 25%;
  height: 35rpx;
}
.chaner .wen .goods_name .name{
  width: 75%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.chaner .wen .goods_point{
  width: 100%;
  font-size: 26rpx;
  color: #9F9F9F;
  letter-spacing: 0.46px;
  margin-top: 7rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.chaner .wen .goods_price{
  font-size: 36rpx;
color: #F21E00;
letter-spacing: 0.64px;
margin-top: 7rpx;
}
.chaner .wen .liang{
  font-size: 24rpx;
color: #9F9F9F;
letter-spacing: 0.43px;
margin-top: 9rpx;
}
.liebie.show{
  position: fixed;
  top:89rpx;
  left:0;
  display: block;
}
.liebie.hide{
  display: none;
}